{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs", 
    "sourceMap": true, 
    "outDir": "./dist",
    "rootDir": "./", 
    "strict": true, 
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "paths": {
      "types/*": ["./types/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".github", ".vscode"]
}
